<div class="container">
  <h1>Twitch</h1>
  <div class="col-sm style="center">
  <%= form_tag twitch_path, :method => 'get' do %>
    <%= label_tag :game %>
    <%= text_field_tag :name, nil, :required => true %>
  <%= submit_tag :Save %>
  <% end %>
    <img src="http://placekitten.com/270/250">
  </div>

  <div class="col-sm">
    <%= form_tag streamers_path, :method => 'get' do %>
      <%= label_tag :name %>
      <%= text_field_tag :streamer, nil, :required => true %>
    <%= submit_tag :Save %>
    <% end %>
    <img src="http://placekitten.com/500/200" alt="Cat">
  </div>

</div>
